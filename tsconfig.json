{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"target": "es2015",
		"module": "es2020",
		"lib": ["es2018", "dom"],
		"paths": {
			"ngx-material-loading": [
				"dist/ngx-material-loading/ngx-material-loading",
				"dist/ngx-material-loading"
			]
		},
		"plugins": [{ "name": "typescript-tslint-plugin" }]
	},
	"angularCompilerOptions": {
		"enableIvy": false
	}
}
